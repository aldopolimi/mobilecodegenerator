«DEFINE main FOR Application-»

«FILE name+"/mobile/src/main/AndroidManifest.xml"-»
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="«this.companyIdentifier».«this.name.toLowerCase()»" >
    
    «IF viewControllers.map != null-»
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    «ENDIF-»
	«IF viewControllers.videoViews.sourceType.toString().contains("remoteFile") ||
		viewControllers.imageViews.sourceType.toString().contains("remoteFile") || 
    	viewControllers.audioPlayers.sourceType.toString().contains("remoteFile")-»
    <uses-permission android:name="android.permission.INTERNET"/>
    «ENDIF-»
    «IF viewControllers.videoViews.sourceType.toString().contains("hardwareFile")-»
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    «ENDIF-»
    «IF viewControllers.audioPlayers.sourceType.toString().contains("hardwareFile")-»
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    «ENDIF-»
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="«this.name.toLowerCase()»"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        «IF smartwatch.voiceMessage == true-»
        <service android:name=".ListenerServiceFromWear">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED"/>
                <data android:scheme="wear" android:host="*" android:path="/wear-app-message" />
            </intent-filter>
        </service>
        «ENDIF-»
        <!--
        TODO: Get a Google Maps API key here.
        https://developers.google.com/maps/documentation/android/start#get-key
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />
        «FOREACH viewControllers AS vc-»
		<activity
            android:name="«vc.application.companyIdentifier».«this.name.toLowerCase()».«vc.name»Activity"
            android:label="«this.name»" 
            android:theme="@style/AppTheme.NoActionBar">
            «IF vc.launcher-»
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			«ENDIF-»
        </activity>
		«ENDFOREACH-»
    </application>
</manifest>
«ENDFILE-»

«FILE name+"/wear/src/main/AndroidManifest.xml"-»
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="«this.companyIdentifier».«this.name.toLowerCase()»" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="«this.name.toLowerCase()»"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:name=".MainActivity"
            android:label="«this.name.toLowerCase()»">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		«IF smartwatch.voiceMessage == true-»
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SendActivity"
            android:label="«this.name.toLowerCase()»"></activity>
        «ENDIF-»    
    </application>

</manifest>
«ENDFILE-»

«ENDDEFINE-»